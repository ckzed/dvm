# Docker functions/aliases

drr () {
   C=$1;
   shift;
   docker run -v `pwd`:/h -it --rm $C “$@”
}

dtar() {
    cid=$(docker create $1)
    base=$(echo "$1" | sed 's,/,_,g')
    docker export $cid -o ${base}.tar
    docker stop $cid
    docker container rm $cid
}

da() {
    docker start $1 && docker attach $1
}

dip() {
    docker inspect -f '{{ .NetworkSettings.IPAddress }}' $1
}

dshell() {
    docker exec -it $1 /bin/bash
}

alias dps="docker ps"
alias dclean="docker container prune -f && docker volume prune -f && docker system prune -f"
alias dstop="docker container stop"
alias dup="docker-compose up -d"
